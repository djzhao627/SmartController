<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBg"
    android:paddingTop="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/curtain_power_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_curtain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="窗帘通光率调节"
            android:textColor="@color/white" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/curtain_power_sb"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_progress="50"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_show_thumb_text="true"
            app:isb_tick_texts_color="@color/white"
            app:isb_thumb_color="@color/mainPink"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/mainPink"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/mainSplit"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/mainPink"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/air_condition_power_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_air_condition" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="空调温度调节" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/air_condition_power_sb"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_progress="50"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_show_thumb_text="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/white"
            app:isb_thumb_color="@color/mainPink"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/mainPink"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/mainSplit"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/mainPink"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icebox_power_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_icebox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="冰箱制冷率调节" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/icebox_power_sb"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_ticks_count="5"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/white"
            app:isb_thumb_color="@color/mainPink"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/mainPink"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/mainSplit"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/mainPink"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>
    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_list_item"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="收 起" />

</LinearLayout>